{
    "$defs": {
        "Benchmark": {
            "additionalProperties": false,
            "description": "Information about the specific Benchmark solved.",
            "properties": {
                "id": {
                    "description": "Unique identifier that must not collide with any other.",
                    "type": "string"
                },
                "name": {
                    "description": "Alphanumerical identifier for part of a Benchmark Problem.",
                    "pattern": "^\\d\\a",
                    "type": "string"
                },
                "version": {
                    "description": "Semantic version of a software project.",
                    "pattern": "^[\\d+\\.]+",
                    "type": "string"
                }
            },
            "required": [
                "id",
                "name"
            ],
            "title": "Benchmark",
            "type": "object"
        },
        "BenchmarkResult": {
            "additionalProperties": false,
            "description": "Container for this Benchmark Problem solution.",
            "properties": {
                "datasets": {
                    "description": "Container for a simulation result.",
                    "items": {
                        "$ref": "#/$defs/Dataset"
                    },
                    "type": "array"
                }
            },
            "title": "BenchmarkResult",
            "type": "object"
        },
        "ComputeResource": {
            "additionalProperties": false,
            "description": "Summary of the hardware used to execute the simulation.",
            "properties": {
                "architecture": {
                    "description": "Computer processor architecture required for this simulation.",
                    "type": "string"
                },
                "cores": {
                    "description": "Number of parallel cores or threads of execution used by the simulation on a CPU, GPU, or accelerator device.",
                    "type": "integer"
                },
                "nodes": {
                    "description": "Number of machines allocated for the simulation in a computer cluster environment.",
                    "type": "integer"
                }
            },
            "title": "ComputeResource",
            "type": "object"
        },
        "Contributor": {
            "additionalProperties": false,
            "description": "Someone who contributed to this solution.",
            "properties": {
                "affiliation": {
                    "description": "Institution, company, or agency a person works with.",
                    "items": {
                        "type": "string"
                    },
                    "type": "array"
                },
                "email": {
                    "description": "A person's electronic mailing address.",
                    "pattern": "^\\S+@[\\S+\\.]+\\S+",
                    "type": "string"
                },
                "handle": {
                    "description": "A person's identifier on a website, without the \"at\" symbol.",
                    "items": {
                        "type": "string"
                    },
                    "type": "array"
                },
                "id": {
                    "description": "Unique identifier that must not collide with any other.",
                    "type": "string"
                },
                "name": {
                    "description": "Informal or human-memorable identifier that may collide with others.",
                    "type": "string"
                }
            },
            "required": [
                "id"
            ],
            "title": "Contributor",
            "type": "object"
        },
        "Dataset": {
            "additionalProperties": false,
            "description": "Root and context for this Benchmark Problem solution.",
            "properties": {
                "benchmark": {
                    "description": "Details of the Benchmark Problem.",
                    "type": "string"
                },
                "contributors": {
                    "description": "Collection of people who worked on this solution.",
                    "items": {
                        "$ref": "#/$defs/Contributor"
                    },
                    "type": "array"
                },
                "date_created": {
                    "description": "Day when an item was uploaded, released, or published.",
                    "format": "date",
                    "type": "string"
                },
                "framework": {
                    "description": "A computer program or library",
                    "items": {
                        "$ref": "#/$defs/Software"
                    },
                    "type": "array"
                },
                "id": {
                    "description": "Unique identifier that must not collide with any other.",
                    "type": "string"
                },
                "implementation": {
                    "description": "Source code implementing the solution.",
                    "type": "string"
                },
                "name": {
                    "description": "Informal or human-memorable identifier that may collide with others.",
                    "type": "string"
                },
                "results": {
                    "$ref": "#/$defs/Results",
                    "description": "Collection of outputs and summary data from a simulation."
                },
                "summary": {
                    "description": "Text description, abstract, or narrative.",
                    "type": "string"
                }
            },
            "required": [
                "id"
            ],
            "title": "Dataset",
            "type": "object"
        },
        "Results": {
            "additionalProperties": false,
            "description": "Runtime information and output from a simulation.",
            "properties": {
                "csv_data": {
                    "description": "Tabular output from a simulation.",
                    "items": {
                        "$ref": "#/$defs/File"
                    },
                    "type": "array"
                },
                "hardware": {
                    "description": "Computer hardware used to run the simulation.",
                    "items": {
                        "$ref": "#/$defs/ComputeResource"
                    },
                    "type": "array"
                },
                "memory_in_kb": {
                    "description": "Memory capacity required for this simulation.",
                    "type": "integer"
                },
                "raw_data": {
                    "description": "Raw data output from a simulation.",
                    "items": {
                        "$ref": "#/$defs/File"
                    },
                    "type": "array"
                },
                "time_in_s": {
                    "description": "Amount of time required to execute the simulation.",
                    "type": "integer"
                },
                "viz_data": {
                    "description": "Visualization output from a simulation.",
                    "items": {
                        "$ref": "#/$defs/File"
                    },
                    "type": "array"
                }
            },
            "required": [
                "csv_data"
            ],
            "title": "Results",
            "type": "object"
        },
        "Software": {
            "additionalProperties": false,
            "description": "A software product, download, or repository.",
            "properties": {
                "download": {
                    "description": "Link to a download URL.",
                    "type": "string"
                },
                "id": {
                    "description": "Unique identifier that must not collide with any other.",
                    "type": "string"
                },
                "name": {
                    "description": "Informal or human-memorable identifier that may collide with others.",
                    "type": "string"
                },
                "repository": {
                    "description": "A repository of source code.",
                    "type": "string"
                },
                "version": {
                    "description": "Semantic version of a software project.",
                    "pattern": "^[\\d+\\.]+",
                    "type": "string"
                }
            },
            "required": [
                "id"
            ],
            "title": "Software",
            "type": "object"
        },
        "SourceCode": {
            "additionalProperties": false,
            "description": "Link to the authors' implementation of the benchmark problem.",
            "properties": {
                "id": {
                    "description": "Unique identifier that must not collide with any other.",
                    "type": "string"
                },
                "name": {
                    "description": "Informal or human-memorable identifier that may collide with others.",
                    "type": "string"
                },
                "repository": {
                    "description": "A repository of source code.",
                    "type": "string"
                }
            },
            "required": [
                "id"
            ],
            "title": "SourceCode",
            "type": "object"
        }
    },
    "$id": "https://w3id.org/usnistgov/pfhub-schema",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "additionalProperties": true,
    "metamodel_version": "1.7.0",
    "properties": {
        "datasets": {
            "description": "Container for a simulation result.",
            "items": {
                "$ref": "#/$defs/Dataset"
            },
            "type": "array"
        }
    },
    "title": "pfhub_schema",
    "type": "object",
    "version": "0.1.0"
}