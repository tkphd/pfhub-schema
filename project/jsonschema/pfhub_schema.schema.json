{
    "$defs": {
        "ArchiveData": {
            "additionalProperties": false,
            "description": "Specialization of a pfhub:File containing a compressed data archive.",
            "properties": {
                "format": {
                    "$ref": "#/$defs/CompressedFiles",
                    "description": "Format of data contained in a file."
                },
                "name": {
                    "description": "Informal or human-memorable identifier that may collide with others.",
                    "type": "string"
                }
            },
            "required": [
                "name"
            ],
            "title": "ArchiveData",
            "type": "object"
        },
        "BenchmarkResult": {
            "additionalProperties": false,
            "description": "Root and context for this Benchmark Problem solution.",
            "properties": {
                "benchmark_problem": {
                    "$ref": "#/$defs/ValidBenchmarkProblem",
                    "description": "Alphanumerical identifier for part of a Benchmark Problem.",
                    "pattern": "^\\d\\a"
                },
                "benchmark_version": {
                    "description": "Numerical identifier for a Benchmark Problem version.",
                    "type": "integer"
                },
                "contributors": {
                    "description": "Collection of people who worked on this solution.",
                    "items": {
                        "$ref": "#/$defs/Contributor"
                    },
                    "type": "array"
                },
                "date_created": {
                    "description": "Day when an item was uploaded, released, or published.",
                    "format": "date",
                    "type": "string"
                },
                "framework": {
                    "description": "A computer program or library",
                    "items": {
                        "$ref": "#/$defs/Software"
                    },
                    "type": "array"
                },
                "id": {
                    "description": "Unique identifier that must not collide with any other.",
                    "type": "string"
                },
                "implementation": {
                    "$ref": "#/$defs/SourceCode",
                    "description": "Source code implementing the solution."
                },
                "results": {
                    "$ref": "#/$defs/Results",
                    "description": "Collection of outputs and summary data from a simulation."
                },
                "schema": {
                    "$ref": "#/$defs/SourceCode",
                    "description": "Version of the PFHub Schema this record conforms to."
                },
                "summary": {
                    "description": "Text description, abstract, or narrative.",
                    "type": "string"
                }
            },
            "required": [
                "id",
                "benchmark_problem",
                "benchmark_version"
            ],
            "title": "BenchmarkResult",
            "type": "object"
        },
        "CompressedFiles": {
            "description": "Valid compressed archive file extensions.",
            "enum": [
                "7z",
                "bz2",
                "gz",
                "tgz",
                "tar.gz",
                "zip"
            ],
            "title": "CompressedFiles",
            "type": "string"
        },
        "ComputeResource": {
            "additionalProperties": false,
            "description": "Summary of the hardware used to execute the simulation.",
            "properties": {
                "architecture": {
                    "description": "Computer processor architecture required for this simulation.",
                    "type": "string"
                },
                "cores": {
                    "description": "Number of parallel cores or threads of execution used by the simulation on a CPU, GPU, or accelerator device.",
                    "type": "integer"
                },
                "nodes": {
                    "description": "Number of machines allocated for the simulation in a computer cluster environment.",
                    "type": "integer"
                }
            },
            "title": "ComputeResource",
            "type": "object"
        },
        "Contributor": {
            "additionalProperties": false,
            "description": "Someone who contributed to this solution.",
            "properties": {
                "affiliation": {
                    "description": "Institution, company, or agency a person works with.",
                    "items": {
                        "type": "string"
                    },
                    "type": "array"
                },
                "email": {
                    "description": "A person's electronic mailing address.",
                    "pattern": "^\\S+@[\\S+\\.]+\\S+",
                    "type": "string"
                },
                "handle": {
                    "description": "A person's identifier on a website, without the \"at\" symbol.",
                    "items": {
                        "type": "string"
                    },
                    "type": "array"
                },
                "id": {
                    "description": "Unique identifier that must not collide with any other.",
                    "type": "string"
                },
                "name": {
                    "description": "Informal or human-memorable identifier that may collide with others.",
                    "type": "string"
                }
            },
            "required": [
                "id"
            ],
            "title": "Contributor",
            "type": "object"
        },
        "DataFiles": {
            "description": "Valid raw or transformed spatial phase-field data file extensions.",
            "enum": [
                "csv",
                "hdf5",
                "pvti",
                "pvtr",
                "pvts",
                "pvtu",
                "tsv",
                "vti",
                "vtr",
                "vts",
                "vtu",
                "xdmf"
            ],
            "title": "DataFiles",
            "type": "string"
        },
        "FieldData": {
            "additionalProperties": false,
            "description": "Specialization of a pfhub:File representing field variables in a simulation domain using a format appropriate for the application.",
            "properties": {
                "format": {
                    "description": "Format of data contained in a file.",
                    "type": "string"
                },
                "name": {
                    "description": "Informal or human-memorable identifier that may collide with others.",
                    "type": "string"
                }
            },
            "required": [
                "name"
            ],
            "title": "FieldData",
            "type": "object"
        },
        "ImageData": {
            "additionalProperties": false,
            "description": "Specialization of a pfhub:File for images and visualization data.",
            "properties": {
                "format": {
                    "$ref": "#/$defs/ImageFiles",
                    "description": "Format of data contained in a file."
                },
                "name": {
                    "description": "Informal or human-memorable identifier that may collide with others.",
                    "type": "string"
                }
            },
            "required": [
                "name"
            ],
            "title": "ImageData",
            "type": "object"
        },
        "ImageFiles": {
            "description": "Valid image and visualization file extensions.",
            "enum": [
                "png",
                "pvti",
                "pvtr",
                "pvts",
                "pvtu",
                "tif",
                "tsv",
                "vti",
                "vtr",
                "vts",
                "vtu"
            ],
            "title": "ImageFiles",
            "type": "string"
        },
        "Results": {
            "additionalProperties": false,
            "description": "Runtime information and output from a simulation.",
            "properties": {
                "fictive_time": {
                    "description": "Maximum simulated (or \"fictive\") time reached.",
                    "type": "number"
                },
                "file_archive": {
                    "description": "Compressed data.",
                    "items": {
                        "$ref": "#/$defs/ArchiveData"
                    },
                    "type": "array"
                },
                "file_spatial": {
                    "description": "Raw data output from a simulation.",
                    "items": {
                        "$ref": "#/$defs/FieldData"
                    },
                    "type": "array"
                },
                "file_timeseries": {
                    "description": "Columnar timeseries data from a simulation.",
                    "items": {
                        "$ref": "#/$defs/TimeSeriesData"
                    },
                    "type": "array"
                },
                "file_visual": {
                    "description": "Visualization output from a simulation.",
                    "items": {
                        "$ref": "#/$defs/ImageData"
                    },
                    "type": "array"
                },
                "hardware": {
                    "description": "Computer hardware used to run the simulation.",
                    "items": {
                        "$ref": "#/$defs/ComputeResource"
                    },
                    "type": "array"
                },
                "memory_in_kb": {
                    "description": "Memory capacity required for this simulation.",
                    "type": "integer"
                },
                "time_in_s": {
                    "description": "Amount of time required to execute the simulation.",
                    "type": "integer"
                }
            },
            "title": "Results",
            "type": "object"
        },
        "Software": {
            "additionalProperties": false,
            "description": "A software product, download, or repository.",
            "properties": {
                "commit": {
                    "description": "Commit hash in a repository of source code.",
                    "pattern": "^\\S+",
                    "type": "string"
                },
                "download": {
                    "description": "Link to a download URL.",
                    "type": "string"
                },
                "name": {
                    "description": "Informal or human-memorable identifier that may collide with others.",
                    "type": "string"
                },
                "url": {
                    "description": "URL of an online resource or website.",
                    "type": "string"
                },
                "version": {
                    "description": "Semantic version of a software project.",
                    "pattern": "^[\\d+\\.]+",
                    "type": "string"
                }
            },
            "required": [
                "url"
            ],
            "title": "Software",
            "type": "object"
        },
        "SourceCode": {
            "additionalProperties": false,
            "description": "Link to the authors' implementation of the benchmark problem.",
            "properties": {
                "commit": {
                    "description": "Commit hash in a repository of source code.",
                    "pattern": "^\\S+",
                    "type": "string"
                },
                "name": {
                    "description": "Informal or human-memorable identifier that may collide with others.",
                    "type": "string"
                },
                "url": {
                    "description": "URL of an online resource or website.",
                    "type": "string"
                }
            },
            "required": [
                "url"
            ],
            "title": "SourceCode",
            "type": "object"
        },
        "TabularFiles": {
            "description": "Valid tabular file extensions.",
            "enum": [
                "csv",
                "tsv"
            ],
            "title": "TabularFiles",
            "type": "string"
        },
        "TimeSeriesData": {
            "additionalProperties": false,
            "description": "Specialization of a pfhub:File representing a time series in plain text using named columns of comma-separated values.",
            "properties": {
                "columns": {
                    "description": "Column names applied to tabular data.",
                    "items": {
                        "pattern": "^\\S+",
                        "type": "string"
                    },
                    "type": "array"
                },
                "format": {
                    "$ref": "#/$defs/TabularFiles",
                    "description": "Format of data contained in a file."
                },
                "name": {
                    "description": "Informal or human-memorable identifier that may collide with others.",
                    "type": "string"
                }
            },
            "required": [
                "name"
            ],
            "title": "TimeSeriesData",
            "type": "object"
        },
        "ValidBenchmarkProblem": {
            "description": "Known parts of the accepted PFHub Benchmark Problems.",
            "enum": [
                "1a",
                "1b",
                "1c",
                "1d",
                "2a",
                "2b",
                "2c",
                "2d",
                "3a",
                "4a",
                "4b",
                "4c",
                "4d",
                "4e",
                "4f",
                "4g",
                "4h",
                "5a",
                "5b",
                "6a",
                "6b",
                "7a",
                "7b",
                "7c",
                "8a",
                "8b",
                "8c"
            ],
            "title": "ValidBenchmarkProblem",
            "type": "string"
        },
        "ValidBenchmarkVersion": {
            "description": "Known versions of the accepted PFHub Benchmark Problems.",
            "enum": [
                "0",
                "1"
            ],
            "title": "ValidBenchmarkVersion",
            "type": "string"
        }
    },
    "$id": "https://w3id.org/usnistgov/pfhub-schema",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "additionalProperties": true,
    "metamodel_version": "1.7.0",
    "properties": {
        "benchmark_problem": {
            "$ref": "#/$defs/ValidBenchmarkProblem",
            "description": "Alphanumerical identifier for part of a Benchmark Problem.",
            "pattern": "^\\d\\a"
        },
        "benchmark_version": {
            "description": "Numerical identifier for a Benchmark Problem version.",
            "type": "integer"
        },
        "contributors": {
            "description": "Collection of people who worked on this solution.",
            "items": {
                "$ref": "#/$defs/Contributor"
            },
            "type": "array"
        },
        "date_created": {
            "description": "Day when an item was uploaded, released, or published.",
            "format": "date",
            "type": "string"
        },
        "framework": {
            "description": "A computer program or library",
            "items": {
                "$ref": "#/$defs/Software"
            },
            "type": "array"
        },
        "id": {
            "description": "Unique identifier that must not collide with any other.",
            "type": "string"
        },
        "implementation": {
            "$ref": "#/$defs/SourceCode",
            "description": "Source code implementing the solution."
        },
        "results": {
            "$ref": "#/$defs/Results",
            "description": "Collection of outputs and summary data from a simulation."
        },
        "schema": {
            "$ref": "#/$defs/SourceCode",
            "description": "Version of the PFHub Schema this record conforms to."
        },
        "summary": {
            "description": "Text description, abstract, or narrative.",
            "type": "string"
        }
    },
    "required": [
        "id",
        "benchmark_problem",
        "benchmark_version"
    ],
    "title": "pfhub_schema",
    "type": "object",
    "version": "0.1.0"
}