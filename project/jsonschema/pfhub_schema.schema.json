{
    "$defs": {
        "BenchmarkResult": {
            "additionalProperties": false,
            "description": "Root and context for this Benchmark Problem solution.",
            "properties": {
                "benchmark_problem": {
                    "$ref": "#/$defs/ValidBenchmarkProblem",
                    "description": "Alphanumerical identifier for part of a Benchmark Problem.",
                    "pattern": "^\\d\\a"
                },
                "benchmark_version": {
                    "description": "Numerical identifier for a Benchmark Problem version.",
                    "type": "integer"
                },
                "contributors": {
                    "description": "Collection of people who worked on this solution.",
                    "items": {
                        "$ref": "#/$defs/Contributor"
                    },
                    "type": "array"
                },
                "date_created": {
                    "description": "Day when an item was uploaded, released, or published.",
                    "format": "date",
                    "type": "string"
                },
                "framework": {
                    "description": "A computer program or library",
                    "items": {
                        "$ref": "#/$defs/Software"
                    },
                    "type": "array"
                },
                "id": {
                    "description": "Unique identifier that must not collide with any other.",
                    "type": "string"
                },
                "implementation": {
                    "$ref": "#/$defs/SourceCode",
                    "description": "Source code implementing the solution."
                },
                "results": {
                    "$ref": "#/$defs/Results",
                    "description": "Collection of outputs and summary data from a simulation."
                },
                "schema": {
                    "$ref": "#/$defs/SourceCode",
                    "description": "Version of the PFHub Schema this record conforms to."
                },
                "summary": {
                    "description": "Text description, abstract, or narrative.",
                    "type": "string"
                }
            },
            "required": [
                "id",
                "benchmark_problem",
                "benchmark_version"
            ],
            "title": "BenchmarkResult",
            "type": "object"
        },
        "ComputeResource": {
            "additionalProperties": false,
            "description": "Summary of the hardware used to execute the simulation.",
            "properties": {
                "architecture": {
                    "description": "Computer processor architecture required for this simulation.",
                    "type": "string"
                },
                "cores": {
                    "description": "Number of parallel cores or threads of execution used by the simulation on a CPU, GPU, or accelerator device.",
                    "type": "integer"
                },
                "nodes": {
                    "description": "Number of machines allocated for the simulation in a computer cluster environment.",
                    "type": "integer"
                }
            },
            "title": "ComputeResource",
            "type": "object"
        },
        "Contributor": {
            "additionalProperties": false,
            "description": "Someone who contributed to this solution.",
            "properties": {
                "affiliation": {
                    "description": "Institution, company, or agency a person works with.",
                    "items": {
                        "type": "string"
                    },
                    "type": "array"
                },
                "email": {
                    "description": "A person's electronic mailing address.",
                    "pattern": "^\\S+@[\\S+\\.]+\\S+",
                    "type": "string"
                },
                "handle": {
                    "description": "A person's identifier on a website, without the \"at\" symbol.",
                    "items": {
                        "type": "string"
                    },
                    "type": "array"
                },
                "id": {
                    "description": "Unique identifier that must not collide with any other.",
                    "type": "string"
                },
                "name": {
                    "description": "Informal or human-memorable identifier that may collide with others.",
                    "type": "string"
                }
            },
            "required": [
                "id"
            ],
            "title": "Contributor",
            "type": "object"
        },
        "CsvFile": {
            "additionalProperties": false,
            "description": "Data represented by Comma-separated values in plain text.",
            "properties": {
                "columns": {
                    "description": "Column names applied to tabular data.",
                    "items": {
                        "pattern": "^\\S+",
                        "type": "string"
                    },
                    "type": "array"
                },
                "format": {
                    "$ref": "#/$defs/CsvFileTypes",
                    "description": "Format of data contained in a file."
                },
                "name": {
                    "description": "Informal or human-memorable identifier that may collide with others.",
                    "type": "string"
                }
            },
            "required": [
                "name"
            ],
            "title": "CsvFile",
            "type": "object"
        },
        "CsvFileTypes": {
            "description": "Valid CSV file extensions.",
            "enum": [
                "csv"
            ],
            "title": "CsvFileTypes",
            "type": "string"
        },
        "DataFile": {
            "additionalProperties": false,
            "description": "Data represented in an application-specific or binary format.",
            "properties": {
                "format": {
                    "description": "Format of data contained in a file.",
                    "type": "string"
                },
                "name": {
                    "description": "Informal or human-memorable identifier that may collide with others.",
                    "type": "string"
                }
            },
            "required": [
                "name"
            ],
            "title": "DataFile",
            "type": "object"
        },
        "Results": {
            "additionalProperties": false,
            "description": "Runtime information and output from a simulation.",
            "properties": {
                "csv_data": {
                    "description": "Tabular output from a simulation.",
                    "items": {
                        "$ref": "#/$defs/CsvFile"
                    },
                    "type": "array"
                },
                "hardware": {
                    "description": "Computer hardware used to run the simulation.",
                    "items": {
                        "$ref": "#/$defs/ComputeResource"
                    },
                    "type": "array"
                },
                "memory_in_kb": {
                    "description": "Memory capacity required for this simulation.",
                    "type": "integer"
                },
                "raw_data": {
                    "description": "Raw data output from a simulation.",
                    "items": {
                        "$ref": "#/$defs/DataFile"
                    },
                    "type": "array"
                },
                "time_in_s": {
                    "description": "Amount of time required to execute the simulation.",
                    "type": "integer"
                },
                "viz_data": {
                    "description": "Visualization output from a simulation.",
                    "items": {
                        "$ref": "#/$defs/VisualizationFile"
                    },
                    "type": "array"
                }
            },
            "title": "Results",
            "type": "object"
        },
        "Software": {
            "additionalProperties": false,
            "description": "A software product, download, or repository.",
            "properties": {
                "commit": {
                    "description": "Commit hash in a repository of source code.",
                    "pattern": "^\\S+",
                    "type": "string"
                },
                "download": {
                    "description": "Link to a download URL.",
                    "type": "string"
                },
                "name": {
                    "description": "Informal or human-memorable identifier that may collide with others.",
                    "type": "string"
                },
                "url": {
                    "description": "URL of an online resource or website.",
                    "type": "string"
                },
                "version": {
                    "description": "Semantic version of a software project.",
                    "pattern": "^[\\d+\\.]+",
                    "type": "string"
                }
            },
            "required": [
                "url"
            ],
            "title": "Software",
            "type": "object"
        },
        "SourceCode": {
            "additionalProperties": false,
            "description": "Link to the authors' implementation of the benchmark problem.",
            "properties": {
                "commit": {
                    "description": "Commit hash in a repository of source code.",
                    "pattern": "^\\S+",
                    "type": "string"
                },
                "name": {
                    "description": "Informal or human-memorable identifier that may collide with others.",
                    "type": "string"
                },
                "url": {
                    "description": "URL of an online resource or website.",
                    "type": "string"
                }
            },
            "required": [
                "url"
            ],
            "title": "SourceCode",
            "type": "object"
        },
        "Tarball": {
            "additionalProperties": false,
            "description": "Gzip-compressed Tar data archive.",
            "properties": {
                "format": {
                    "$ref": "#/$defs/TarballTypes",
                    "description": "Format of data contained in a file."
                },
                "name": {
                    "description": "Informal or human-memorable identifier that may collide with others.",
                    "type": "string"
                }
            },
            "required": [
                "name"
            ],
            "title": "Tarball",
            "type": "object"
        },
        "TarballTypes": {
            "description": "Valid tarball file extensions.",
            "enum": [
                "tgz",
                "tar.gz"
            ],
            "title": "TarballTypes",
            "type": "string"
        },
        "ValidBenchmarkProblem": {
            "description": "Known parts of the accepted PFHub Benchmark Problems.",
            "enum": [
                "1a",
                "1b",
                "1c",
                "1d",
                "2a",
                "2b",
                "2c",
                "2d",
                "3a",
                "4a",
                "4b",
                "4c",
                "4d",
                "4e",
                "4f",
                "4g",
                "4h",
                "5a",
                "5b",
                "6a",
                "6b",
                "7a",
                "7b",
                "7c",
                "8a",
                "8b",
                "8c"
            ],
            "title": "ValidBenchmarkProblem",
            "type": "string"
        },
        "ValidBenchmarkVersion": {
            "description": "Known versions of the accepted PFHub Benchmark Problems.",
            "enum": [
                "0",
                "1"
            ],
            "title": "ValidBenchmarkVersion",
            "type": "string"
        },
        "VisualizationFile": {
            "additionalProperties": false,
            "description": "Visualization data.",
            "properties": {
                "format": {
                    "description": "Format of data contained in a file.",
                    "type": "string"
                },
                "name": {
                    "description": "Informal or human-memorable identifier that may collide with others.",
                    "type": "string"
                }
            },
            "required": [
                "name"
            ],
            "title": "VisualizationFile",
            "type": "object"
        }
    },
    "$id": "https://w3id.org/usnistgov/pfhub-schema",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "additionalProperties": true,
    "metamodel_version": "1.7.0",
    "properties": {
        "benchmark_problem": {
            "$ref": "#/$defs/ValidBenchmarkProblem",
            "description": "Alphanumerical identifier for part of a Benchmark Problem.",
            "pattern": "^\\d\\a"
        },
        "benchmark_version": {
            "description": "Numerical identifier for a Benchmark Problem version.",
            "type": "integer"
        },
        "contributors": {
            "description": "Collection of people who worked on this solution.",
            "items": {
                "$ref": "#/$defs/Contributor"
            },
            "type": "array"
        },
        "date_created": {
            "description": "Day when an item was uploaded, released, or published.",
            "format": "date",
            "type": "string"
        },
        "framework": {
            "description": "A computer program or library",
            "items": {
                "$ref": "#/$defs/Software"
            },
            "type": "array"
        },
        "id": {
            "description": "Unique identifier that must not collide with any other.",
            "type": "string"
        },
        "implementation": {
            "$ref": "#/$defs/SourceCode",
            "description": "Source code implementing the solution."
        },
        "results": {
            "$ref": "#/$defs/Results",
            "description": "Collection of outputs and summary data from a simulation."
        },
        "schema": {
            "$ref": "#/$defs/SourceCode",
            "description": "Version of the PFHub Schema this record conforms to."
        },
        "summary": {
            "description": "Text description, abstract, or narrative.",
            "type": "string"
        }
    },
    "required": [
        "id",
        "benchmark_problem",
        "benchmark_version"
    ],
    "title": "pfhub_schema",
    "type": "object",
    "version": "0.1.0"
}